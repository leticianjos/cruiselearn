 <script>
 function calcularValorTotal() {
 var total = 0;
 
 // Obter quantidade de pessoas
 var qtdPessoas = document.getElementById('qtd-pessoas').value;
 
 // Obter tipo de quarto selecionado
 var tipoQuarto = document.getElementById('tipo-quarto').value;
 
 // Calcular valor total
 if (tipoQuarto === 'interna') {
 total = qtdPessoas * 15000; // Valor para quarto individual
 } else if (tipoQuarto === 'janela') {
 total = qtdPessoas * 15500; // Valor para quarto duplo
 } else if (tipoQuarto === 'varanda') {
 total = qtdPessoas * 17000; // Valor para quarto triplo
 } else if (tipoQuarto === 'suite') {
 total = qtdPessoas * 20000; // Valor para quarto quadruplo
 }
 
 // Exibir valor total
 document.getElementById('valor-total').innerHTML = 'Valor Total: R$ ' + total;
 }
 </script>

