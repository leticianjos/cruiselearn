 const tipoQuartoSelect = document.getElementById("tipo-quarto");
 const imagemQuarto = document.getElementById("imagem-quarto");
 
 tipoQuartoSelect.addEventListener("change", () => {
 const tipoQuarto = tipoQuartoSelect.value;
 
